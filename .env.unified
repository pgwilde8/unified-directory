# Unified Business Directory Platform Configuration
# Supports both Google OAuth (legacy) and Multi-tenant API functionality
# Port: 9180

# Application Environment
APP_ENV=development
DEBUG=true
SECRET_KEY=your_secret_key_here_change_in_production

# Server Configuration
PORT=9180
HOST=0.0.0.0

# Database Configuration - Unified Database
DATABASE_URL=postgresql://adminwatch:adminwatch123@localhost:5432/unified_directory

# Google OAuth Configuration (for legacy functionality)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:9180/api/auth/google/callback

# Stripe Configuration (from Camilo's work)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Multi-tenant Configuration
ENABLE_MULTI_TENANT=true
DEFAULT_TENANT_ID=1

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIRECTORY=uploads/

# Storage Configuration (S3-compatible)
STORAGE_BUCKET=unified-directory
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=https://unified-directory.sfo3.digitaloceanspaces.com
STORAGE_ACCESS_KEY=your_digitalocean_spaces_access_key
STORAGE_SECRET_KEY=your_digitalocean_spaces_secret_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@unified-directory.com

# API Configuration
API_RATE_LIMIT_PER_SECOND=10
API_RATE_LIMIT_BURST=100
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:9180,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# PostGIS Configuration
POSTGIS_ENABLED=true

# News API Configuration
NEWS_API_KEY=your_news_api_key_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=unified-directory-backups